{
  "name": "@wopr-network/wopr-plugin-mcp",
  "version": "0.1.0",
  "description": "Universal MCP bridge for WOPR - wraps any MCP server as A2A tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "lint": "biome check --config-path=. src/",
    "lint:fix": "biome check --config-path=. --fix src/",
    "format": "biome format --config-path=. --write src/",
    "check": "biome check --config-path=. src/ && tsc --noEmit",
    "test": "vitest run"
  },
  "keywords": ["wopr", "plugin", "mcp", "tools", "a2a"],
  "author": "WOPR",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.0",
    "@wopr-network/plugin-types": "^0.2.1",
    "winston": "^3.19.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@types/node": "^25.3.0",
    "@vitest/coverage-istanbul": "^4.0.18",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": ["dist"],
  "release": {
    "extends": "@wopr-network/semantic-release-config"
  }
}
